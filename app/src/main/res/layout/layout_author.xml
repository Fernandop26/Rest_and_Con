<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorActivity">

    <RelativeLayout
        android:id="@+id/linia_colecciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Author"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="34dp" />

        <ImageView
            android:id="@+id/author_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/author_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"

            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/author_biography"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="228dp"

            android:justificationMode="inter_word"
            android:text="Biography" />

        <TextView
            android:id="@+id/author_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_biography"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:text="Obras"
            android:textSize="30sp" />


        <Button
            android:id="@+id/sortButtonAlph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/author_pieces"
            android:layout_marginLeft="100dp"

            android:layout_marginTop="-46dp"
            android:text="Alfabetico"
            android:textSize="15dp" />

        <!-- LÍNEA HORIZONTAL -->
        <Button
            android:id="@+id/sortButtonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/author_pieces"
            android:layout_marginLeft="250dp"

            android:layout_marginTop="-42dp"
            android:text="Fecha"
            android:textSize="15dp" />

        <View
            android:id="@+id/linia_obras"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/author_pieces"
            android:background="@android:color/black" />

        <GridView
            android:id="@+id/llista_obras"
            android:layout_width="345dp"
            android:layout_height="343dp"
            android:layout_below="@+id/linia_obras"
            android:layout_marginTop="5dp"
            android:numColumns="auto_fit"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="427dp"
            tools:listitem="@android:layout/simple_list_item_2"></GridView>
        <!--
        <TextView
            android:id="@+id/author_collections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llista_obras"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:text="Colecciones"
            android:textSize="30sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/author_collections"
            android:background="@android:color/black" /> -->


    </RelativeLayout>

    <!-- BOTÓN CÁMARA -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="24dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:clickable="true"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>