<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/layout1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/artista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="artista" />

                <Button
                    android:id="@+id/obra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="obra" />

                <Button
                    android:id="@+id/rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="restauración" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout2"
                android:layout_below="@+id/layout1">

                <Button
                    android:id="@+id/museo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rest"
                    android:text="museo" />

                <Button
                    android:id="@+id/movimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="movimiento" />

                <Button
                    android:id="@+id/tecnica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="técnica" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout3"
                android:layout_below="@+id/layout2">

                <Button
                    android:id="@+id/camara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="camara" />

                <TextView
                    android:id="@+id/jsonview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JSON:" />
            </LinearLayout>


            <!-- LAYOUT MUSEOS -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_museums"
                android:layout_below="@+id/layout3">

                <TextView
                    android:id="@+id/textmuseum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museos:"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/mu_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_below="@+id/textmuseum"/>

                <ImageView
                    android:id="@+id/m_chicago"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/mu_line"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_moma"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/mu_line"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_monet"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/m_chicago"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_orsay"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/m_moma"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </RelativeLayout>


            <!-- LAYOUT TÉCNICAS -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_techniques"
                android:layout_below="@+id/layout_museums">

                <TextView
                    android:id="@+id/texttechnique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Técnicas:"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/t_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_below="@+id/texttechnique"/>

                <ImageView
                    android:id="@+id/t_aceite"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/t_line"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/t_temple"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/t_line"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/t_xilografica"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/t_aceite"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/t_oleo"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/t_temple"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </RelativeLayout>


            <!-- LAYOUT MOVIMIENTO -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_movements"
                android:layout_below="@+id/layout_techniques">

                <TextView
                    android:id="@+id/textmoviment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movimientos:"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/mo_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_below="@+id/textmoviment"/>

                <ImageView
                    android:id="@+id/m_impresionismo"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/mo_line"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_posimpresionismo"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/mo_line"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_renacimiento"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/m_impresionismo"
                    android:layout_marginTop="8dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/m_ukiyoe"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/m_posimpresionismo"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="180dp"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>